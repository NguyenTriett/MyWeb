@model WebTruong.Models.Subject

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Them moi san pham</h2>
@Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-success" })
@using (Html.BeginForm("Create", "MonHoc", FormMethod.Post, new { emctype = "multipart/from-data" }))
{
    @Html.AntiForgeryToken()
<table class="table">
    
    <tr>
        <th>@Html.DisplayNameFor(m => m.SubjectName)</th>
        <td>@Html.EditorFor(m => m.SubjectName)</td>
    </tr>
    <tr>
        <td colspan="2">
            @Html.ValidationMessageFor(m => m.SubjectName)
        </td>

    </tr>
    <tr>
        <th>@Html.DisplayNameFor(m => m.DeptCode)</th>
        <td>@Html.EditorFor(m => m.DeptCode)</td>
    </tr>
    <tr>
        <td colspan="2">
            @Html.ValidationMessageFor(m => m.DeptCode)
        </td>

    </tr>
    <tr>
        <th>@Html.DisplayNameFor(m => m.Credits)</th>
        <td>@Html.EditorFor(m => m.Credits)</td>
    </tr>
    <tr>
        <td colspan="2">
            @Html.ValidationMessageFor(m => m.Credits)
        </td>

    </tr>
    <tr>
        <th>@Html.DisplayNameFor(m => m.StartDate)</th>
        <td>@Html.EditorFor(m => m.StartDate)</td>
    </tr>
    <tr>
        <td colspan="2">
            @Html.ValidationMessageFor(m => m.StartDate)
        </td>

    </tr>
    <tr>
        <th>@Html.DisplayNameFor(m => m.ClassTime)</th>
        <td>@Html.EditorFor(m => m.ClassTime)</td>
    </tr>
    <tr>
        <td colspan="2">
            @Html.ValidationMessageFor(m => m.ClassTime)
        </td>

    </tr>
    <tr>
        <th>@Html.DisplayNameFor(m => m.Capacity)</th>
        <td>@Html.EditorFor(m => m.Capacity)</td>
    </tr>
    <tr>
        <td colspan="2">
            @Html.ValidationMessageFor(m => m.Capacity)
        </td>

    </tr>
    <tr>
        <th>@Html.DisplayNameFor(m => m.Classroom)</th>
        <td>@Html.EditorFor(m => m.Classroom)</td>
    </tr>
    <tr>
        <td colspan="2">
            @Html.ValidationMessageFor(m => m.Classroom)
        </td>

    </tr>

    <tr>
        <th>@Html.DisplayNameFor(m => m.DeptCode)</th>
        <td>
            @Html.DropDownListFor(m => m.DeptCode, (SelectList)ViewBag.listCate, "Chọn mã môn học")
        </td>
    </tr>
    <tr>
        <td colspan="2" style="color:red">
            @Html.ValidationMessageFor(m => m.DeptCode)
        </td>
    </tr>

    <tr>
        <td colspan="2">
            <input type="submit" value="Save" class="btn btn-danger" />
        </td>
    </tr>

</table>
  

}

